<odoo>
  <data>
    <record id="estate_offer_form" model="ir.ui.view">
      <field name="name">Estate Offer View Form</field>
      <field name="model">estate.offer</field>
      <field name="arch" type="xml">
        <form string="Estate Offer">
          <sheet>
            <h1>New Offer</h1>
            <group col="4">
              <field name="price"></field>
              <field name="state"></field>
              <field name="partner_id"></field>
              <field name="validity"></field>
              <field name="date_deadline"></field>
            </group>
          </sheet>
        </form>
      </field>
    </record>
  </data>
</odoo>